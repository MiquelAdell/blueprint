{
  "name": "roots/sage",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "The best WordPress starter theme with a modern front-end development workflow. Based on HTML5 Boilerplate, gulp, Bower, and Bootstrap.",
  "homepage": "https://roots.io/sage/",
  "authors": [
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    },
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/roots/sage/issues",
    "forum": "https://discourse.roots.io/"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "composer/installers": "~1.0",
    "roots/soil": "3.6.2",
    "wpackagist-plugin/wp-migrate-db": "^0.7.2",
    "wpackagist-plugin/akismet": "^3.1",
    "wpackagist-plugin/post-type-switcher": "^1.5",
    "wpackagist-plugin/advanced-excerpt": "^4.2.3",
    "wpackagist-plugin/wordpress-importer": "^0.6.1",
    "wpackagist-plugin/clean-html": "^1.1",
    "storm2k/sagextras": "^1.1",
    "wpackagist-plugin/wp-optimize": "1.8.9.10",
    "wpackagist-plugin/easy-bootstrap-shortcodes": "^4.5",
    "roots/wp-password-bcrypt": "^1.0",
    "wpackagist-plugin/kau-boys-backend-localization": "^2.1",
    "wpackagist-plugin/dynamic-featured-image": "^3.5",
    "wpackagist-plugin/dnui-delete-not-used-image-wordpress": "^2.4"
  },
  "extra": {
    "installer-paths": {
      "../../mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "../../plugins/{$name}/": ["type:wordpress-plugin"],
      "../../themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
